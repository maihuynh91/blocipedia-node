<!DOCTYPE html>
<html>

  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <main class="container">

      <% include ../static/partials/navbar.ejs %>

      <hr>  <hr>  <hr>
       <h5> Private Wikis</h5>

      <% if(currentUser && currentUser.role !== "premium") { %>
          <p> Upgrade your account to view and create the private wikis.</p>
      <% } %>

      <% if(currentUser && currentUser.role !== "standard") { %>
          <a href="/wikis/new" class="btn btn-success">Create Wiki</a>
      <% } %>


      <ul class="list-group">
        <% wikis.forEach((wiki) => { %>
          <% if(wiki.private === true && currentUser.role !== "standard") { %>
            <li class="list-group-item">
              <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
            </li>
          <% } %>
        <% }) %>
      </ul>
      
     </main>

  </body>

</html>